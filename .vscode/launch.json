{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "OpenCL: Run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/opencl_app",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
